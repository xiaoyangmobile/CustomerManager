/* pages/home/home.wxss */
page {
  background-color: lightgrey;
  padding: 10rpx;
}
.top-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  min-height: 300rpx;
  padding: 20rpx;
  background: white;
  width: 92%;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  margin-bottom: 16rpx;
  flex-direction: column;
}

.top-card__main .top-text {
  color: rgb(83, 137, 236);
}

.top-card__main .progress-value{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.top-card__main .progress-value .total{
  margin-left: auto;
}

.center {
  display: flex;
  justify-content: center;
}

.blue {
  color: rgb(83, 137, 236);
}

.list-item {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 20rpx;
}